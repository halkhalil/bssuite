<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity GoodsReceivedAudit.
    -->
    <changeSet id="20151110004005" author="jhipster">
        <createTable tableName="goods_received_audit">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="received_on" type="timestamp"/>
            <column name="txn_number" type="varchar(255)"/>
            <column name="type_receipt" type="varchar(255)"/>
            <column name="qty_received" type="double"/>
            <column name="received_by_id" type="bigint"/>
            <column name="supplier_id" type="bigint"/>
            <column name="purchase_order_id" type="bigint"/>
            <column name="product_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="goods_received_audit" columnName="received_on" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="received_by_id"
                                 baseTableName="goods_received_audit"
                                 constraintName="fk_goodsreceivedaudit_receivedby_id"
                                 referencedColumnNames="id"
                                 referencedTableName="staff"/>

        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="goods_received_audit"
                                 constraintName="fk_goodsreceivedaudit_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>

        <addForeignKeyConstraint baseColumnNames="purchase_order_id"
                                 baseTableName="goods_received_audit"
                                 constraintName="fk_goodsreceivedaudit_purchaseorder_id"
                                 referencedColumnNames="id"
                                 referencedTableName="purchase_order"/>

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="goods_received_audit"
                                 constraintName="fk_goodsreceivedaudit_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

    </changeSet>
</databaseChangeLog>
